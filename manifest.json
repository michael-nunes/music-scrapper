{
  "manifest_version": 3,
  "name": "Music Scrapper",
  "version": "1.0",
  "description": "Generate Slide Files",
  
  "icons": {
    "16":  "images/icon-16.png",
    "32":  "images/icon-32.png",
    "48":  "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  
  "content_scripts" : [
    { 
      "matches" : ["<all_urls>"],
      "js" : ["scripts/content.js"]
    }
  ],
  
 
  "action": {
    "default_title": "Gerar Gerar Gerar",
    "default_popup" : "popup.html"
  },
  "host_permissions": [
    "*://letras.mus.br/*"
  ]
   
}
